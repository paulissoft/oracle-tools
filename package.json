{
    "name": "PATO",
    "scripts": {
        "build:docs:admin": "yarn run ploc --in 'db/app/admin/src/full/*.*_SPEC.*.sql' --out docs/docs/plsql/admin/{file}.md",
        "build:docs:api": "yarn run ploc --in 'db/app/api/src/full/*.*_SPEC.*.sql' --out docs/docs/plsql/api/{file}.md",
        "build:docs:cfg": "yarn run ploc --in 'db/app/cfg/src/full/*.*_SPEC.*.sql' --out docs/docs/plsql/cfg/{file}.md",
        "build:docs:data:pks": "yarn run ploc --in 'db/app/data/src/full/*.PACKAGE_SPEC.*.sql' --out docs/docs/plsql/data/{file}.md",
        "build:docs:data": "yarn run build:docs:data:pks",
        "build:docs:ddl:pks": "yarn run ploc --in 'db/app/ddl/src/full/*.PACKAGE_SPEC.*.sql' --out docs/docs/plsql/ddl/{file}.md",
        "build:docs:ddl:fnc": "yarn run ploc --in 'db/app/ddl/src/full/*.FUNCTION.*.sql' --out docs/docs/plsql/ddl/{file}.md",
        "build:docs:ddl:prc": "yarn run ploc --in 'db/app/ddl/src/full/*.PROCEDURE.*.sql' --out docs/docs/plsql/ddl/{file}.md",
        "build:docs:ddl": "yarn run build:docs:ddl:pks && yarn run build:docs:ddl:fnc && yarn run build:docs:ddl:prc",
        "build:docs:ext": "yarn run ploc --in 'db/app/ext/src/full/*.*_SPEC.*.sql' --out docs/docs/plsql/ext/{file}.md",
        "build:docs:msg:tys:incr": "yarn run ploc --in 'db/app/msg/src/incr/V*.??__create_*TYP.sql' --out docs/docs/plsql/msg/{file}.md",
        "build:docs:msg:tys": "yarn run ploc --in 'db/app/msg/src/full/*.TYPE_SPEC.*.sql' --out docs/docs/plsql/msg/{file}.md",
        "build:docs:msg:pks": "yarn run ploc --in 'db/app/msg/src/full/*.PACKAGE_SPEC.*.sql' --out docs/docs/plsql/msg/{file}.md",
        "build:docs:msg": "yarn run build:docs:msg:tys:incr && yarn run build:docs:msg:pks",
        "build:docs:ui": "yarn run ploc --in 'db/app/ui/src/full/*.*_SPEC.*.sql' --out docs/docs/plsql/ui/{file}.md",
        "build:docs": "yarn run build:docs:admin && yarn run build:docs:api && yarn run build:docs:cfg && yarn run build:docs:data && yarn run build:docs:ddl && yarn run build:docs:ext && yarn run build:docs:msg && yarn run build:docs:ui",
        "watch:docs": "chokidar package.json 'db/app/*/src/full/*.*_SPEC.*.sql' 'db/app/ddl/src/full/*.FUNCTION.*.sql' 'db/app/ddl/src/full/*.PROCEDURE.*.sql' --initial -c \"yarn run build:docs\"",
        "watch:docs:msg:tys": "chokidar 'db/app/msg/src/full/*.TYPE_SPEC.*.sql' --initial -c \"yarn run build:docs:msg:tys\"",
        "watch:docs:msg:pks": "chokidar 'db/app/msg/src/full/*.PACKAGE_SPEC.*.sql' --initial -c \"yarn run build:docs:msg:pks\"",
        "check:docs:msg": "yarn run markdownlint-cli2 'docs/docs/plsql/msg/V*.??__create_*TYP.md'",
        "check:docs": "yarn run check:docs:msg:tys:incr"
    },
    "dependencies": {
        "chokidar-cli": "^3.0.0",
        "markdownlint-cli2": "^0.18.1",
        "ploc": "^0.9.1"
    },
    "markdownlint-cli2": {
        "config": {
            "MD013": false,
            "no-multiple-blanks": false
        }
    }
}
